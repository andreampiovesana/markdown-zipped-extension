{
  "name": "markdown-zipped",
  "displayName": "Markdown Zipped (MDZ)",
  "description": "Support for .mdz files (compressed markdown with media)",
  "version": "1.0.0",
  "publisher": "https://openindustry.it",
  "author": {
    "name": "Andrea M. Piovesana",
    "email": "andrea.m.piovesana@openindustry.it"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreampiovesana/markdown-zipped-extension.git"
  },
  "homepage": "https://github.com/andreampiovesana/markdown-zipped-extension#readme",
  "bugs": {
    "url": "https://github.com/andreampiovesana/markdown-zipped-extension/issues"
  },
  "keywords": [
    "markdown",
    "zip",
    "mdz",
    "editor",
    "media",
    "documents"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "mdzEditor.editor",
        "displayName": "MDZ Editor",
        "selector": [
          {
            "filenamePattern": "*.mdz"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "mdz",
        "aliases": ["MDZ", "Markdown Zipped"],
        "extensions": [".mdz"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "mdzEditor.createNew",
        "title": "New MDZ Document",
        "category": "MDZ"
      },
      {
        "command": "mdzEditor.exportMd",
        "title": "Export as Markdown",
        "category": "MDZ"
      },
      {
        "command": "mdzEditor.openWith",
        "title": "Open with MDZ Editor",
        "category": "MDZ"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mdzEditor.createNew",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "mdzEditor.openWith",
          "group": "navigation",
          "when": "resourceExtname == .mdz"
        }
      ],
      "commandPalette": [
        {
          "command": "mdzEditor.openWith",
          "when": "resourceExtname == .mdz"
        }
      ]
    }
  },
  "activationEvents": [
    "onCustomEditor:mdzEditor.editor",
    "onLanguage:mdz"
  ],
  "dependencies": {
    "yauzl": "^2.10.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/yauzl": "^2.10.0",
    "@types/yazl": "^2.4.2",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  }
}